@model LojaNet.Models.Produto

@{
    ViewData["Title"] = "Alterar";
}

<h2>Alterar</h2>

<hr />

<form method="post" class="form-horizontal">

    @Html.ValidationSummary(null, new { @class = "text-danger" })

    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label class="control-label" for="Nome">Nome:</label>
        <input class="form-control input-small" type="text" name="Nome" value="@Model.Nome" />
    </div>
    <div class="form-group">
        <label class="control-label" for="Preço">Preço:</label>
        <input class="form-control input-small" type="text" name="Preco" value="@Model.Preco" />
    </div>

    <div class="form-group">
        <label class="control-label" for="Estoque">Estoque:</label>
        <input class="form-control input-small" type="text" name="Estoque" value="@Model.Estoque" />
    </div>
    <input class="btn btn-default btn-gravar" type="submit" value="Gravar" />
</form>
