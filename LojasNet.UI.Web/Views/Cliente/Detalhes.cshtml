@model LojaNet.Models.Cliente

@{
    ViewData["Title"] = "Detalhes";
}

<h2>Dados do Cliente</h2>

<dl>
    <dt>Nome:</dt>
    <dd>@Model.Nome</dd>

    <dt>Telefone:</dt>
    <dd>@Model.Telefone</dd>

    <dt>Email:</dt>
    <dd>@Model.Email</dd>
</dl>

<div>
    <hr/>
    <a href="/Cliente/Index" class="btn btn-voltar">Voltar</a>
    <a href="/Cliente/Alterar/@Model.Id" class="btn btn-dark">Alterar</a>
    <a href="/Cliente/Excluir/@Model.Id" class="btn btn-danger">Excluir</a>


</div>
