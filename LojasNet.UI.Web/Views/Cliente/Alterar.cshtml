@model LojaNet.Models.Cliente

@{
    ViewData["Title"] = "Alterar";
}

<h2>Alterar</h2>

<hr />

<form method="post" class="form-horizontal">

    @Html.ValidationSummary(null, new { @class = "text-danger" })

    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label class="control-label" for="Nome">Nome:</label>
        <input class="form-control input-small" type="text" name="Nome" value="@Model.Nome" />
    </div>
    <div class="form-group">
        <label class="control-label" for="Telefone">Telefone:</label>
        <input class="form-control input-small" type="text" name="Telefone" value="@Model.Telefone" />
    </div>

    <div class="form-group">
        <label class="control-label" for="Email">Email:</label>
        <input class="form-control input-small" type="text" name="Email" value="@Model.Email" />
    </div>
    <input class="btn btn-default btn-gravar" type="submit" value="Gravar" />
</form>
